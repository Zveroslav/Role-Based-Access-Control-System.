{
    "info": {
      "name": "RBAC Demo API",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
      "description": "Collection for testing the TurboVets RBAC demo endpoints"
    },
    "item": [
      {
        "name": "Auth ▸ Login",
        "request": {
          "method": "POST",
          "header": [
            { "key": "Content-Type", "value": "application/json" }
          ],
          "url": {
            "raw": "{{baseUrl}}/auth/login",
            "host": ["{{baseUrl}}"],
            "path": ["auth", "login"]
          },
          "body": {
            "mode": "raw",
            "raw": "{\n  \"email\": \"owner@clinic.com\",\n  \"password\": \"secret\"\n}"
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "type": "text/javascript",
              "exec": [
                "if (pm.response.code === 200) {",
                "  var json = pm.response.json();",
                "  pm.collectionVariables.set('token', json.accessToken);",
                "}"
              ]
            }
          }
        ]
      },
      {
        "name": "Patient Records ▸ List (scoped)",
        "request": {
          "method": "GET",
          "header": [
            { "key": "Authorization", "value": "Bearer {{token}}" }
          ],
          "url": {
            "raw": "{{baseUrl}}/patient-records",
            "host": ["{{baseUrl}}"],
            "path": ["patient-records"]
          }
        }
      },
      {
        "name": "Patient Records ▸ Detail by ID",
        "request": {
          "method": "GET",
          "header": [
            { "key": "Authorization", "value": "Bearer {{token}}" }
          ],
          "url": {
            "raw": "{{baseUrl}}/patient-records/{{recordId}}",
            "host": ["{{baseUrl}}"],
            "path": ["patient-records", "{{recordId}}"]
          }
        }
      },
      {
        "name": "Permissions ▸ Explicit Check",
        "request": {
          "method": "POST",
          "header": [
            { "key": "Authorization", "value": "Bearer {{token}}" },
            { "key": "Content-Type", "value": "application/json" }
          ],
          "url": {
            "raw": "{{baseUrl}}/permissions/check",
            "host": ["{{baseUrl}}"],
            "path": ["permissions", "check"]
          },
          "body": {
            "mode": "raw",
            "raw": "{\n  \"userId\": 1,\n  \"action\": \"READ\",\n  \"resourceType\": \"PatientRecord\",\n  \"resourceId\": 1\n}"
          }
        }
      },
      {
        "name": "Audit ▸ Logs (Admin only)",
        "request": {
          "method": "GET",
          "header": [
            { "key": "Authorization", "value": "Bearer {{token}}" }
          ],
          "url": {
            "raw": "{{baseUrl}}/audit?limit=50",
            "host": ["{{baseUrl}}"],
            "path": ["audit"],
            "query": [
              { "key": "limit", "value": "50" }
            ]
          }
        }
      }
    ],
    "variable": [
      { "key": "baseUrl", "value": "http://localhost:3000/api/v1" },
      { "key": "token", "value": "" },
      { "key": "recordId", "value": "1" }
    ]
  }
  